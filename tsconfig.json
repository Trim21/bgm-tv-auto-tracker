{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "strict": false,
    "types": [
      "axios",
      "jquery",
      "vue"
    ],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es6"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]

}
