{
  "manifest_version": 2,
  "name": "My crx",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "这是一个示例Chrome插件",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "popup.js"
    ]
  },
  "permissions": [
    "http://bgm.tv/*",
    "https://bgm.tv/*",
    "https://www.bilibili.com/bangumi/play/*",
    "https://httpbin.org/*",
    "management",
    "contentSettings",
    "cookies",
    "storage",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/bangumi/play/*"
      ],
      "js": [
        "lib/jquery/jquery-3.3.1.min.js",
        "js/get_bangumi_info.js"
      ],
      "run_at": "document_end"
    }
  ]
}
