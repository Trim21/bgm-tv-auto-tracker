{
  "manifest_version": 2,
  "name": "bgm.tv progress auto track",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "这是一个示例Chrome插件",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "page": "background/background.html"
  },
  "permissions": [
    "http://bgm.tv/*",
    "https://bgm.tv/*",
    "https://api.bgm.tv/*",
    "http://localhost:6001/*",
    "https://bangumi-auto-tracker.trim21.cn/*",
    "management",
    "contentSettings",
    "cookies",
    "storage",
    "webRequest",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/bangumi/play/*/21332131"
      ],
      "run_at": "document_start",
      "js": [
        "lib/axios/axios.min.js",
        "lib/jquery/jquery-3.3.1.min.js",
        "inject/common.js"
      ]
    },
    {
      "matches": [
        "https://www.bilibili.com/bangumi/play/*"
      ],
      "run_at": "document_end",
      "js": [
        "inject/bilibili.js"
      ]
    },
    {
      "matches": [
        "https://bangumi-auto-tracker.trim21.cn/oauth_callback*"
      ],
      "run_at": "document_end",
      "js": [
        "inject/oauth.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://bangumi-auto-tracker.trim21.cn/*",
      "https://www.bilibili.com/bangumi/play/*"
    ]
  }
}
